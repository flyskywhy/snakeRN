{
  "name": "snake",
  "version": "2.0.0",
  "private": true,
  "description": "The goal of this project is to create a simple Snake game that could be used in any WebGL context.",
  "scripts": {
    "rn": "adb reverse tcp:8081 tcp:8081; node node_modules/react-native/local-cli/cli.js start",
    "rn-fresh": "adb reverse tcp:8081 tcp:8081; watchman watch-del-all; rm -rf /tmp/react-*; rm -rf /tmp/npm-*; rm -rf /tmp/haste-*; rm -rf /tmp/metro-*; node node_modules/react-native/local-cli/cli.js start --reset-cache",
    "android": "node node_modules/react-native/local-cli/cli.js run-android --no-jetifier",
    "fast-android": "./android/gradlew installDebug --offline -x lint -x lintVitalRelease -p ./android/",
    "ios": "node node_modules/react-native/local-cli/cli.js run-ios",
    "test": "jest",
    "lint": "eslint .",
    "deploy:web": "expo build:web && netlify deploy --prod --dir web-build/"
  },
  "dependencies": {
    "@flyskywhy/react-native-gcanvas": "2.3.12",
    "expo-blur": "~8.0.0",
    "expo-font": "~8.0.0",
    "expo-gl": "~8.4.0",
    "pixi-filters": "^2.7.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-native": "0.63.2",
    "react-native-pixi": "2.0.1",
    "react-native-unimodules": "^0.12.0",
    "react-native-web": "~0.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/runtime": "^7.16.3",
    "@react-native-community/eslint-config": "^3.0.1",
    "babel-jest": "^27.4.4",
    "eslint": "7.6.0",
    "jest": "^27.4.4",
    "metro-react-native-babel-preset": "^0.66.2",
    "prettier": "2.1.1",
    "react-test-renderer": "16.13.1"
  },
  "jest": {
    "preset": "react-native"
  }
}
